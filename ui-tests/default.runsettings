<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <!-- Configurations that affect the Test Framework -->
  <RunConfiguration>
    <!-- Path relative to solution directory -->
    <ResultsDirectory>.\TestResults</ResultsDirectory>

    <!-- [x86] | x64  
      - You can also change it from menu Test, Test Settings, Default Processor Architecture -->
    <TargetPlatform>x64</TargetPlatform>

  </RunConfiguration>

  <!-- Parameters used by tests at runtime -->
  <TestRunParameters>
    <Parameter name="webAppUrl" value="https://ourchive.io/"/>
    <Parameter name="webAppUserName" value="username" />
    <Parameter name="webAppPassword" value="password" />
    <Parameter name="runHeadless" value="true"/>
  </TestRunParameters>

  <!-- Adapter Specific sections -->
  <NUnit>
    <NewOutputXmlFileForEachRun>true</NewOutputXmlFileForEachRun>
    <UseTestNameInConsoleOutput>true</UseTestNameInConsoleOutput> 
    <ShowInternalProperties>true</ShowInternalProperties>
  </NUnit>

</RunSettings>